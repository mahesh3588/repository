<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="dao.customer.Customer" table="TB_Customer">  
    <id name="id">  
     <generator class="increment"></generator>  
    </id>  
            
    <property name="name" column="name"></property>  
    <property name="address" column="address"></property>  
    <property name="contact1" column="contact1"></property>
    <property name="contact2" column="contact2"></property>
    <property name="emailId" column="email_id"></property>
    <property name="birthDate" column="birth_date"></property>
    
  </class>  
            
 </hibernate-mapping>  